/** Template class used for the specialization of the Variant<> classes.
 * @newin{2,28}
 * @ingroup Variant
 */
template<class T>
class Variant : public VariantBase
{
public:
  using CppType = T;
};

template <typename ValueType>
ValueType VariantBase::get_dynamic() const
{
  if (!*this)
    throw std::invalid_argument("Tried to get value of empty Glib::Variant.");
  return cast_dynamic<Variant<ValueType>>(*this).get();
}

/** Creates a Glib::Variant instance.
 *
 * @code
 * std::vector<int> int_vector = { 1, 2, 3, 4, 5, 6, 7, 8 };
 * auto int_vector_variant = Glib::create_variant(int_vector);
 * @endcode
 * is an alternative to
 * @code
 * std::vector<int> int_vector = { 1, 2, 3, 4, 5, 6, 7, 8 };
 * auto int_vector_variant = Glib::Variant<std::vector<int>>::create(int_vector);
 * @endcode
 * %Glib::create_variant() can usually deduce the type of the %Glib::Variant
 * from the type of the argument.
 *
 * There is no %Glib::Variant<const char*> specialization.
 * @code
 * auto variant1 = Glib::create_variant("Hello, World!"); // Error
 * auto variant2 = Glib::create_variant<Glib::ustring>("Hello, World!"); // OK
 * auto variant3 = Glib::create_variant(Glib::ustring("Hello, World!")); // OK
 * auto variant4 = Glib::Variant<Glib::ustring>::create("Hello, World!"); // OK
 * @endcode
 *
 * @relates Glib::VariantBase
 * @ingroup Variant
 * @newin{2,78}
 */
template <typename T>
Variant<T> create_variant(const T& data)
{
  return Variant<T>::create(data);
}

